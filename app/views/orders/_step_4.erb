<div class="modal-header">
  <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
  <h4 class="modal-title">Billing Address</h4>
</div>

<div class="modal-body">
  <div class="form-group street">
    <%= f.label :billing_street, 'Street Address' %>
    <%= f.text_field :billing_street %>
  </div>
  <div class="form-group city">
    <%= f.label :billing_city, 'City' %>
    <%= f.text_field :billing_city %>
  </div>
  <div class="row">
    <div class="col col-xs-8">
      <div class="form-group state">
        <%= f.label :billing_state, 'State' %>
        <%= f.text_field :billing_state %>
      </div>
    </div>
    <div class="col col-xs-4">
      <div class="form-group zip">
        <%= f.label :billing_zip, 'Zip Code' %>
        <%= f.text_field :billing_zip %>
      </div>
    </div>
  </div>
  <div class="form-group country">
    <%= f.label :billing_country, 'Country' %>
    <%= f.text_field :billing_country %>
  </div>
</div>

<div class="modal-footer">
  <a type="button" class="btn btn-default prev">Back</a>
  <%= f.submit "Confirm Order", class: 'btn btn-primary' %>
</div>
